<AgHaritalama>:    
	GridLayout:
		cols: 3
		rows: 2
		Label:
			text: 'Ip Adresi : '
			height: self.parent.height * 0.07
			size_hint_y: None
			font_size: 18
			size_hint_x: None

		TextInput:
			id: ip
			size_hint_y: None
			size_hint_x: None
			height: self.parent.height * 0.07
			multiline:False
			font_size: 18
			width: self.parent.width /3
        Button:
            text: 'Port Tara'
            font_size: 18
			size_hint_y: None
			size_hint_x: None
			height: self.parent.height * 0.07
            on_press: root.portTarama(ip.text)